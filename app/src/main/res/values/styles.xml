<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextTab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_tab_selector</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TabMeDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginBottom">26dp</item>
        <item name="android:layout_marginTop">26dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="Clickable">
        <item name="android:clickable">true</item>
    </style>

    <style name="TabMeTextCoin" parent="Clickable">
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_red</item>
        <item name="android:paddingTop">23dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TabMeTextCoinLabel" parent="Clickable">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TabMeTextItem" parent="Clickable">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:drawableRight">@drawable/ic_arrow_right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TabMeTextAuction" parent="Clickable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">13dp</item>
        <item name="android:drawablePadding">3dp</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@color/main_red</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
