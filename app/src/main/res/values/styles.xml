<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/main_red</item>
        <item name="colorAccent">@color/main_red</item>
        <item name="android:windowBackground">@color/divider</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextTab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_tab_selector</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TabMeDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginBottom">26dp</item>
        <item name="android:layout_marginTop">26dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="Clickable">
        <item name="android:clickable">true</item>
    </style>

    <style name="TabMeTextCoin" parent="Clickable">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_red</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingTop">17dp</item>
    </style>

    <style name="TabMeTextItem" parent="Clickable">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TabMeTextItemArrow" parent="TabMeTextItem">
        <item name="android:drawableRight">@drawable/ic_arrow_right</item>
    </style>

    <style name="TextItemSetting" parent="TabMeTextItemArrow">
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="TabMeTextAuction" parent="Clickable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">13dp</item>
        <item name="android:drawablePadding">3dp</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@color/main_red</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="IconBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingLeft">@dimen/ic_back_padding</item>
        <item name="android:paddingRight">@dimen/ic_back_padding</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:onClick">onClickBack</item>
    </style>

    <style name="TextTitleRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonCorner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_corner</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PhoneEditText">
        <item name="android:background">@null</item>
        <item name="android:maxLength">11</item>
        <item name="android:hint">@string/hint_phone</item>
        <item name="android:inputType">phone</item>
    </style>

    <style name="ButtonChargeAmount">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:background">@drawable/bg_charge_amount</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/charge_amount_selector</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ButtonBottom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/btn_bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TransparentDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="LoginEditText">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextDetailRuleLabel">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextDetailRule">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_red</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar</item>
    </style>

    <style name="TextProgress">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:textColor">@color/text_progress_selector</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextProgressTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">21dp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextOrderDetail">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
