<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.happy.auction.module.latest.TabLatestFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_toolbar_title"
            style="@style/TextTitle"
            android:text="@string/tab_category"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/v_category"
            android:layout_width="87dp"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_toolbar_title"
            android:layout_marginRight="8dp"
            android:background="@android:color/white"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/item_category"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/v_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_toolbar_title"
            android:layout_toRightOf="@+id/v_category"
            android:background="@android:color/white"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/item_category_goods"/>
    </RelativeLayout>
</layout>